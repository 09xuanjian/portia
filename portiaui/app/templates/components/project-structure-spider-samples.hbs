{{#tree-list-item hasChildren=spider.samples.length childActive=(and (eq activeModels.spider spider) (not (not activeModels.sample))) as |options|}}
    {{#if (eq options.section "item")}}
        {{#list-item-text}}
            SAMPLES
        {{/list-item-text}}
        {{list-item-icon icon='add' disabled=(not canAddSample) action=(action 'addSample' spider)}}
    {{else if (eq options.section "subtrees")}}
        {{#each spider.samples as |sample|}}
            {{#tree-list-item active=(eq activeModels.sample sample) as |options|}}
                {{#if (eq options.section "item")}}
                    {{#link-to 'projects.project.spider.sample' project spider sample}}
                        {{list-item-icon icon='sample'}}
                        {{list-item-editable value=(mut sample.name) editing=(mut sample.new) change=(action 'saveSample' sample)}}
                        {{list-item-icon icon='options'}}
                        {{list-item-icon icon='remove' action=(action 'removeSample' sample)}}
                    {{/link-to}}
                {{/if}}
            {{/tree-list-item}}
        {{/each}}
    {{/if}}
{{/tree-list-item}}
