{{#tree-list}}
    {{#tree-list-item as |options|}}
        {{#if (eq options.section "item")}}
            {{list-item-badge value=followedLinks color=colors.green}}
            Followed
        {{/if}}
    {{/tree-list-item}}
    {{#tree-list-item as |options|}}
        {{#if (eq options.section "item")}}
            {{list-item-badge value=jsLinks color=colors.blue}}
            Followed when Javascript is enabled
        {{/if}}
    {{/tree-list-item}}
    {{#tree-list-item as |options|}}
        {{#if (eq options.section "item")}}
            {{list-item-badge value=ignoredLinks color=colors.red}}
            Not Followed
        {{/if}}
    {{/tree-list-item}}
{{/tree-list}}
