{{#tool-group id="sample-group" as |options|}}
    {{#if (eq options.section "tabs")}}
        {{#tool-tab toolId="data-structure" group=options.group}}
            Data
        {{/tool-tab}}
        {{#tool-tab toolId="actions" group=options.group}}
            Actions
        {{/tool-tab}}
    {{else if (eq options.section "panels")}}
        {{#tool-panel toolId="data-structure" group=options.group as |active|}}
            {{data-structure-panel sample=model selected=active}}
        {{/tool-panel}}
        {{#tool-panel class="container-fluid" toolId='actions' group=options.group}}
            Action recording placeholder<br>
            While this tab is active you can interact with the page
        {{/tool-panel}}
    {{/if}}
{{/tool-group}}

{{#tool-group id="inspector-group" as |options|}}
    {{#if (eq options.section "tabs")}}
        {{#tool-tab toolId="inspector" group=options.group}}
            Inspector
        {{/tool-tab}}
    {{else if (eq options.section "panels")}}
        {{#tool-panel class="inspector container-fluid" toolId="inspector" group=options.group}}
            {{inspector-panel sample=model}}
        {{/tool-panel}}
    {{/if}}
{{/tool-group}}
