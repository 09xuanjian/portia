{{#if model.showLinks}}
    {{#tool-group id="show-links-legend-group" as |group|}}
        {{#if (eq group.section "tabs")}}
            {{#group.tab toolId="show-links-legend"}}
                Followed links
            {{/group.tab}}
        {{else if (eq group.section "panels")}}
            {{#group.panel id="show-links-legend" class="container-fluid" toolId="show-links-legend"}}
                {{show-links-legend followedLinks=followedLinkElements.length jsLinks=jsLinkElements.length ignoredLinks=ignoredLinkElements.length}}
            {{/group.panel}}
        {{/if}}
    {{/tool-group}}
{{/if}}

