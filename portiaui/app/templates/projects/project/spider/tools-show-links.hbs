{{#if model.showLinks}}
    {{#tool-group id="show-links-legend-group" as |options|}}
        {{#if (eq options.section "tabs")}}
            {{#tool-tab toolId="show-links-legend" group=options.group}}
                Followed links
            {{/tool-tab}}
        {{else if (eq options.section "panels")}}
            {{#tool-panel id="show-links-legend" class="container-fluid" toolId="show-links-legend" group=options.group}}
                {{show-links-legend followedLinks=followedLinkElements.length jsLinks=jsLinkElements.length ignoredLinks=ignoredLinkElements.length}}
            {{/tool-panel}}
        {{/if}}
    {{/tool-group}}
{{/if}}

